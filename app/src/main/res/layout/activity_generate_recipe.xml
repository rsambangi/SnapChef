<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp"
    tools:context=".GenerateRecipeActivity">

        <!-- Loading layout (visible initially, hidden after recipe is generated) -->
    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/loadingGenerateRecipeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <ProgressBar
        android:id="@+id/loadingGenerateRecipeSpinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/loadingGenerateRecipeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="@string/loading_generate_recipe"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/loadingGenerateRecipeSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Title of the Recipe (set dynamically in code) -->
    <TextView
    android:id="@+id/recipeTitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:fontFamily="@font/alata"
    android:textSize="36sp"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:textAlignment="center"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Description of the Recipe (set dynamically in code) -->
    <TextView
    android:id="@+id/recipeDescription"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:fontFamily="@font/alata"
    android:textSize="18sp"
    android:textColor="@android:color/black"
    android:textAlignment="center"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@id/recipeTitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

        <!-- Semi-transparent overlay behind the scroll content for better readability -->
    <View
    android:id="@+id/overlay"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="#AAFFFFFF"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="80dp"
    app:layout_constraintTop_toBottomOf="@id/recipeDescription"
    app:layout_constraintBottom_toTopOf="@+id/buttonLinearLayout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

        <!-- ScrollView containing the recipe steps -->
    <ScrollView
    android:id="@+id/recipeScrollView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="gone"
    app:layout_constraintTop_toTopOf="@id/overlay"
    app:layout_constraintBottom_toBottomOf="@id/overlay"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
    android:id="@+id/recipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <!-- Steps added dynamically in code -->
    </LinearLayout>
        </ScrollView>

        <!-- Button Bar at the Bottom -->
    <LinearLayout
    android:id="@+id/buttonLinearLayout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- Apply the same styling as the "start" button in your final recipe screen -->
    <Button
        android:id="@+id/regenerateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:fontFamily="@font/alata"
        android:text="Regenerate"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:fontFamily="@font/alata"
        android:text="Start"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:fontFamily="@font/alata"
        android:text="Save"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:elevation="4dp"
        android:padding="16dp" />
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
